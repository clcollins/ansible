# User specific aliases and functions

# Create passwords
genpw () {
  local args="$@"
  if [[ "${args}" == "human" ]]
  then
    pwgen --capitalize \
      --numerals \
      --symbols 16
  elif [[ "${args}" == "uuid" ]]
  then
    uuidgen --random
  else
    pwgen --capitalize \
      --numerals \
      --secure \
      --symbols 16
  fi
}

runhook () {
  local hook="${1:-}"
  local toplevel="$(git rev-parse --show-toplevel)"

  if [[ -z "${hook}" ]]
  then
    echo "No hook provided"
    return 1
  fi

  local hookbin=".git/hooks/${hook}"

  if [[ -f ${toplevel}/${hookbin} ]]
  then
     pushd ${toplevel} > /dev/null
     bash ${hookbin}
     local retval=${?}
     popd > /dev/null
  fi

  return ${retval}
}

cc0 () {
  local cctxt="https://creativecommons.org/publicdomain/zero/1.0/legalcode.txt"
	curl ${cctxt} > LICENSE \
	&& if git status >> /dev/null 2>&1 
	   then
	     git add LICENSE \
	   	&& git commit --amend --no-edit \
	   	&& git push -f
	   fi
}

