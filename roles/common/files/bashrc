# Some fun git aliases
git-rm-secret () {
  local secret_file="${1}"
  git filter-branch \
      --force \
      --index-filter "git rm --cached --ignore-unmatch ${secret_file}" \
      --prune-empty \
      --tag-name-filter cat -- \
      --all

  echo "Don't forget to run: `git push origin --force --all`"
  echo '...and perhaps we should add the sensitive file to our .gitignore, should we not?'
}

LOLCOMMITS_ENABLE="lolcommits --enable --animate 2 --delay 1 --fork --stealth"

git () {
  local lolcommits_enable="lolcommits --enable --animate 2 --delay 1 --fork --stealth"
  if [[ $@ == "init" ]] && lolcommits --version > /dev/null
  then
    command git init && ${LOLCOMMITS_ENABLE}
  elif [[ $@ == "lolcommits" ]]
  then
    command ${LOLCOMMITS_ENABLE}
  elif [[ $@ == "init" ]] && ! lolcommits -v > /dev/null
  then
    echo "lolcommits not found"
    return 1
  elif [[ $@ == "pish" ]]
  then
    echo "I think you've had enough...  Did you mean 'push'?"
    return 1
  elif [[ $@ == "log" ]]
  then
    command git log \
                --graph \
                --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' \
                --abbrev-commit
  else
    command git "$@"
  fi
}

lolcommits_enable () {
  if ! lolcommits --version > /dev/null
  then
    echo "lolcommits not found"
    return 1
  else
    command ${LOLCOMMITS_ENABLE}
  fi
}

DOGE="
                   ▄              ▄
                  ▌▒█           ▄▀▒▌
    such commit   ▌▒▒█        ▄▀▒▒▒▐   very branch
                 ▐▄▀▒▒▀▀▀▀▄▄▄▀▒▒▒▒▒▐
               ▄▄▀▒░▒▒▒▒▒▒▒▒▒█▒▒▄█▒▐
             ▄▀▒▒▒░░░▒▒▒░░░▒▒▒▀██▀▒▌
            ▐▒▒▒▄▄▒▒▒▒░░░▒▒▒▒▒▒▒▀▄▒▒▌
            ▌░░▌█▀▒▒▒▒▒▄▀█▄▒▒▒▒▒▒▒█▒▐
           ▐░░░▒▒▒▒▒▒▒▒▌██▀▒▒░░░▒▒▒▀▄▌      so git
           ▌░▒▄██▄▒▒▒▒▒▒▒▒▒░░░░░░▒▒▒▒▌
          ▌▒▀▐▄█▄█▌▄░▀▒▒░░░░░░░░░░▒▒▒▐
          ▐▒▒▐▀▐▀▒░▄▄▒▄▒▒▒▒▒▒░▒░▒░▒▒▒▒▌
          ▐▒▒▒▀▀▄▄▒▒▒▄▒▒▒▒▒▒▒▒░▒░▒░▒▒▐
           ▌▒▒▒▒▒▒▀▀▀▒▒▒▒▒▒░▒░▒░▒░▒▒▒▌
 very code ▐▒▒▒▒▒▒▒▒▒▒▒▒▒▒░▒░▒░▒▒▄▒▒▐
            ▀▄▒▒▒▒▒▒▒▒▒▒▒░▒░▒░▒▄▒▒▒▒▌    wow
              ▀▄▒▒▒▒▒▒▒▒▒▒▄▄▄▀▒▒▒▒▄▀
                ▀▄▄▄▄▄▄▀▀▀▒▒▒▒▒▄▄▀
                   ▒▒▒▒▒▒▒▒▒▒▀▀
"

alias such=git
alias very=git
alias wow='echo -e "\e[7m${DOGE}\e[0m" ; git status'

# Setup ssh stuffs
bond () {
  local key="${HOME}/.ssh/id_ed25519"
  eval $(ssh-agent) \
  && ssh-add $key
}

sshb () {
  ssh -o "UserKnownHostsFile=/dev/null" -o "StrictHostKeyChecking no" $@
}

scpb () {
  scp -o "UserKnownHostsFile=/dev/null" -o "StrictHostKeyChecking no" $@
}

pubnet () {
  dig TXT +short o-o.myaddr.l.google.com @ns1.google.com | awk -F'"' '{ print $2}'
}

rekey () {
  if [[ $1 == "--rsa" ]]
  then
    local key="${HOME}/.ssh/id_rsa"
  else
    local key="${HOME}/.ssh/id_ed25519"
  fi

  if [[ -f ${key} ]]
  then
    mv ${key} ${key}-DISABLED
  elif [[ -f ${key}-DISABLED ]]
  then
    mv ${key}-DISABLED ${key}
  else
    echo "Something is weird... fix me."
  fi
}

# Stuff for buildah

buildah () {
  if [[ $@ == "cleanall" ]]
  then
    echo "Removing all buildah containers and images"
    if [[ ! -z $(sudo buildah containers) ]]
    then
      sudo buildah containers -q \
                          --noheading \
                          --notruncate \
                          | xargs --no-run-if-empty sudo buildah rm
    fi
    if [[ ! -z $(sudo buildah images) ]]
    then
      sudo buildah images -q \
                          --noheading \
                          --notruncate \
                          | xargs --no-run-if-empty sudo buildah rmi -f
    fi
  else
    command buildah "$@"
  fi
}

