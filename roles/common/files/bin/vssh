#!/usr/bin/env bash

set -o nounset
set -o errexit
set -o xtrace

ARGS="$@"

SSH_DIR="/home/${USER}/.ssh"
PRIVATE_KEY="id_ed25519"
SIGNED_KEY="id_ed25519.pub.signed"

DEFAULT_USER="root"
DESTINATION_SERVER="${1}"

ssh -i ${SSH_DIR}/${SIGNED_KEY} \
    -i ${SSH_DIR}/${PRIVATE_KEY} \
    ${DEFAULT_USER}@${DESTINATION_SERVER}
